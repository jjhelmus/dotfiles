######## EVS Desktop specific (move to seperate file ######

# alias for ARM utilities
alias mount_dmf='sshfs copper:/ /home/jhelmus/dmf'
alias mount_bds1='sshfs bds1:/ /home/jhelmus/bds1'
alias umount_dmf='fusermount -u /home/jhelmus/dmf'
alias umount_dbs1='fusermount -u /home/jhelmus/bds1'

# until gvim is fixed in Ubunutu
UBUNTU_MENUPROXY=0

# needed so that cylp works
export LD_LIBRARY_PATH=/home/jhelmus/code/Cbc/Cbc-2.8.8/lib:$LD_LIBRARY_PATH

# BALTRAD Paths
export LD_LIBRARY_PATH=/home/jhelmus/anaconda/baltrad/hlhdf/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=/home/jhelmus/anaconda/baltrad/rave/lib:$LD_LIBRARY_PATH

# Anaconda
export PATH="/home/jhelmus/anaconda/bin:$PATH"

# hack to get grib to find the correct difinitions
export GRIB_DEFINITION_PATH=~/anaconda/share/grib_api/definitions/

# conda and other argcompletes
eval "$(register-python-argcomplete conda)"
eval "$(register-python-argcomplete apu)"
eval "$(register-python-argcomplete arm_archive)"

# Adjust IDL path to include rsl_in_idl
export IDL_PATH='<IDL_DEFAULT>:/home/jhelmus/rsl_in_idl'

# terminal adjust needed of vim-ipython plugin
stty stop undef

# hub completions
eval "$(hub alias -s)"
